{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2020",
        "lib": ["ESNext"],
        "esModuleInterop": true,
        "strict": true,
        "declaration": true,
        "declarationDir": "build",
        "strictNullChecks": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "build",
        "node_modules"
    ]
}
